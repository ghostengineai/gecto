{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,

    "target": "ES2022",
    "lib": ["ES2022"],

    "module": "CommonJS",
    "moduleResolution": "Node",

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
